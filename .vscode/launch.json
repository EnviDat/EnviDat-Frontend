{
  "configurations": [

    {
      "name": "Launch Chrome for debugging",
      "request": "launch",
      "type": "chrome",
      "url": "http://localhost:8080",
      "webRoot": "${workspaceFolder}/src",
      "breakOnLoad": true,
      "sourceMapPathOverrides": {
        "webpack:///src/*": "${webRoot}/*"
      }
    },
    {
      "name": "Attach to Chrome",
      "port": 8080,
      "request": "attach",
      "type": "chrome",
      "webRoot": "${workspaceFolder}"
    },
  ]
}
